<view  wx:if="{{show==true}}" >
    <canvas disable-scroll='true' style="width:100%;height:{{windowHeight}};" canvas-id="firstCanvas" catch:touchmove='touchMove' catch:touchstart='touchStart' catch:touchend='touchEnd'></canvas>
    <button class="btn" bindtap='clearAll'>clearAll</button>
    <button class="btn" bindtap='clearOne'>clearOne</button>
</view>